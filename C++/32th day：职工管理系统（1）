#include "workerManager.h"

WorkerManager::WorkerManager(){

}

WorkerManager::~WorkerManager(){

}

//菜单界面
void WorkerManager::showMenu(){
    cout << " —————————————————————"/*16格*/ << endl;
    cout << "|   丨职工管理系统丨  |" << endl;
    cout << "|    1. 添加联系人    |" << endl;
    cout << "|    2. 显示联系人    |" << endl;
    cout << "|    3. 删除联系人    |" << endl;
    cout << "|    4. 查找联系人    |" << endl;
    cout << "|    5. 清空联系人    |" << endl;
    cout << "|    6. 退出通讯录    |" << endl;
    cout << " —————————————————————"/*16格*/ << endl;
}



#pragma once   //防止头文件重复包含
#include <iostream>
using std::cout, std::cin, std::fstream, std::endl;

class WorkerManager{
    public:
        //构造函数
        WorkerManager();
        //析构函数
        ~WorkerManager();

        //展示菜单
        void showMenu();
};





#include "workerManager.h"

int main(){

    WorkerManager wm;

    wm.showMenu();

    system("pause");

    return 0;

}
