#include <iostream>
using namespace std;

// 函数声明：计算第n个斐波那契数（递归方式）
int fibonacci(int n);

int main() {
    int num;
    
    // 提示用户输入
    cout << "请输入一个正整数：";
    cin >> num;
    
    // 检查输入是否合法
    if (num <= 0) {
        cout << "请输入正整数！" << endl;
        return 1; // 程序异常退出
    }
    
    // 计算并输出结果
    cout << "斐波那契数列的第 " << num << " 项是：" << fibonacci(num) << endl;
    
    return 0; // 程序正常退出
}

// 函数定义：递归计算斐波那契数
int fibonacci(int n) {
    if (n == 1 || n == 2) {
        return 1; // 斐波那契数列前两项为1
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2); // 递归调用
    }
}
