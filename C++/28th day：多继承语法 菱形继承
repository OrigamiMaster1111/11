#include <iostream>
using namespace std;

//多继承语法
//父类
class Base1{
    public:
        int a;
        Base1(){
            a = 100;
        }
};

class Base2{
    public:
        int a;
        Base2(){
            a = 200;
        }
};

//子类 需要继承Base1和Base2
//语法：class 子类: 继承方式 父类1, 继承方式 父类2...
class Son: public Base1, public Base2{
    public:
        Son(){
            c = 300;
            d = 400;
        }
        int c;
        int d;
};

void test01(){
    Son s;
    cout << "size of Son = " << sizeof(s) << endl;
    cout << "s.Base1::a = " << s.Base1::a << endl;
    cout << "s.Base2::a = " << s.Base2::a << endl;
}

int main(){

    test01();

    return 0;
}





#include <iostream>
using namespace std;

//菱形继承

//动物类
class Animal{
    public:
        int age;
};

//利用虚继承 解决菱形继承的问题
//继承之前，加上关键字 virtual 变为虚继承
//Animal类称为 虚基类
//羊类
class Sheep:virtual public Animal{};

//驼类
class Camel:virtual public Animal{};

//羊驼类
class Alpaca: public Camel, public Sheep{};

void test01(){
    Alpaca al;
    al.Sheep::age = 18;
    al.Camel::age = 28;
    //菱形继承，两个父类拥有相同数据，需要加以作用域用于区分
    cout << "al.Sheep::age = " << al.Sheep::age << endl;
    cout << "al.Camel::age = " << al.Camel::age << endl;
    cout << "al.age = " << al.age << endl;

    //这份数据我们知道只需要有一份即可，但菱形继承导致数据有两份，资源浪费
}

int main(){

    test01();

    return 0;
}
