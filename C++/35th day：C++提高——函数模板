template<class T>//typename 鍙互鏇挎崲鎴恈lass
void mySwap(T &a, T &b){
    T temp = a;
    a = b;
    b = temp;
}

//1.鑷姩绫诲瀷鎺ㄥ锛屽繀椤昏鎺ㄥ鍑轰竴鑷寸殑鏁版嵁绫诲瀷T锛屾墠鑳戒娇鐢�
void test01(){
    int a = 10;
    int b = 20;
    double c = 1.1;

    mySwap(a, b);
    // mySwap(a, c); 閿欒 鎺ㄥ涓嶅嚭涓€鑷寸殑鏁版嵁绫诲瀷
    printf("a = %d, b = %d\n",a ,b);
}

//2.妯℃澘蹇呴』瑕佺‘瀹氬嚭T鐨勬暟鎹被鍨嬶紝鎵嶈兘浣跨敤
