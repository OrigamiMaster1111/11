<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
    <script>

        var user = {
            name: "Metatron",
            age: 19,
        }
        
        //利用解构赋值方式简化
        const {name, age}  = user;
        // console.log(name, age);

        const{log} = console;
        log(name, age);

        const {abs, ceil, floor, random} = Math;
        log(abs, ceil, floor);

    </script>
