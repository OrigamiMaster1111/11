
int main() {
    double lim;
    if (scanf("%lf", &lim) != 1) return 0;

    double sum = 1.0;          // 首项 1
    double term = 1.0 / 3.0;   // 第二项 1/3
    int n = 1;

    // 当项的绝对值 >= 阈值时继续累加
    while (term >= lim) {
        sum += term;
        n++;
        term = term * n / (2.0 * n + 1);  // 生成下一项
    }

    // 级数和 * 2 得到圆周率近似值
    printf("%.6f\n", 2.0 * sum);
    return 0;
}
