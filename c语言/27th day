//综合应用
int calculate(int x,int y,char op){
    int sum;
    if(op == '+'){
        sum = x + y;
    } 
    else if(op == '*'){
        sum = x * y;        
    }
    else{
        return -1;
    }
    return sum;
}

int main(){
    int a = calculate(3,4,'+');
    printf("%d\n",a);

    int b = calculate(5,6,'*');
    printf("%d\n",b);
}
